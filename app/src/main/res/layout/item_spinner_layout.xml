<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:ellipsize="end"
        android:singleLine="true"
        android:padding="10dp"
        android:id="@+id/full_currency_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Bangladeshi Taka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/short_currency_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:background="#000"
        android:textColor="#fff"
        android:minWidth="100dp"
        android:gravity="end|center_vertical"
        android:padding="10dp"
        android:id="@+id/short_currency_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="BDT"
        app:layout_constraintBottom_toBottomOf="@+id/full_currency_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/full_currency_name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>